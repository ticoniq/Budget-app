<%= form_with(model: attributes[0], local: true, class: 'mt-10 flex flex-col gap-5 p-4') do |form| %>
  <% if attributes[0].errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(attributes[0].errors.count, "error") %> prohibited this purchase from being saved:</h2>

      <ul>
        <% attributes[0].errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: 'w-full  border-none' %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.number_field :amount, class: 'w-full  border-none' %>
  </div>

  <div>
    <%= form.label :category, style: "display: block", class: 'invisible' %>
    <%= form.collection_select :category_id, attributes[1], :id, :name, { prompt: 'Choose category.....' }, class: 'w-full  border-none'%>
  </div>

  <div>
    <%= form.submit "Save", class: 'text-center p-3 px-5 bg-green-800 text-white hover:bg-green-600 w-full focus:outline-none focus:bg-green-600' %>
  </div>
<% end %>
