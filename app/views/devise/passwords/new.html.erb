<div class="navigation py-6 px-3 blue-nav-white-text">
  <ul class="flex justify-between items-center">
    <li class="w-10">
      <%= link_to image_tag('backarrow.png', alt: 'Back'), user_session_path, class: 'nav-link' %>
    </li>
    <h2><strong>Forgot your password? </strong></h2>
    <li>
      <%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "invisible" %>
    </li>
  </ul>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'mt-10 flex flex-col my-5') do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field border-t-2 -t">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full border-none' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'mt-6 p-3 px-5 green-btn rounded hover:bg-green-600 w-full' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
