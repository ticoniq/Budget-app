<div class="flex flex-col h-screen justify-between">
  <div>
    <div class="navigation py-6 px-3 blue-nav-white-text">
      <ul class="flex justify-between items-center">
        <li class="w-10"><%= link_to image_tag('backarrow.png', alt: 'Back'), categories_path, class: 'nav-link' %></li>
        <h2><strong><%= @category.name %></strong></h2>
        <li><%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %></li>
      </ul>
    </div>
    <p style="color: green"><%= notice %></p>

    <%= render @category %>
    <section class="px-5">
      <div id="purchases">
        <% @purchases.each do |purchase| %>
          <a href="<%= category_purchase_path(@category, purchase) %>" class="m-1">
          <%= render "purchases/purchase", purchase: purchase %>
          </a>
        <% end %>
      </div>
    </section>
  </div>

  <section class="flex flex-col space-y-2 p-5">
      <%= link_to 'New purchase', new_category_purchase_path(@category), class:"text-center p-3 px-5 bg-green-800 text-white hover:bg-green-600 w-full focus:outline-none focus:bg-green-600" %>
      <%= link_to 'Edit category', edit_category_path(@category), class:"text-center p-3 px-5 bg-yellow-800 text-white hover:bg-yellow-600 w-full focus:outline-none focus:bg-green-600" %>

      <%= button_to "Delete category", @category, method: :delete, data: { confirm: 'Are you sure?' }, class: "p-3 px-5 bg-red-800 text-white hover:bg-red-600 w-full" %>
    </section>
  </div>
